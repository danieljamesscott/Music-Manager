<?xml version="1.0" encoding="utf-8"?>
<root>
  <params>
    <param name="show_albumart_front" type="radio" default="1" label="Show front albumart" description="Show/Hide the front albumart below">
      <option value="0">Hide</option>
      <option value="1">Show</option>
    </param>
    <param name="show_albumart_back" type="radio" default="1" label="Show back albumart" description="Show/Hide the back albumart below">
      <option value="0">Hide</option>
      <option value="1">Show</option>
    </param>
    <param name="show_player_plugin" type="radio" default="0" label="Show MP3 player" description="Show/Hide the MP3 player">
      <option value="0">Hide</option>
      <option value="1">Show</option>
    </param>
    <param name="player_plugin" type="text" default="play" label="Plugin code for the MP3 player" description="The plugin code used to wrap the MP3 filename" />
    <param name="player_plugin_options" type="text" default="" label="Plugin options for the MP3 player" description="The plugin options used in the MP3 player" />
  </params>
</root>
